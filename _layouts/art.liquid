---
layout: default
---

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>
</div>

<article>
    {{ content }}
</article>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px;">
  {% assign sorted_pieces = site.art | sort: 'order' %} <!-- Sort by 'order' field -->
  {% for piece in sorted_pieces %}
    <div style="background-color: var(--global-card-bg-color);
                border-radius: 12px;
                overflow: hidden;
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
                transition: transform 0.2s;
                display: flex;
                flex-direction: column;
                height: 350px;">
      <div style="width: 100%; height: 325px; overflow: hidden;">
        {% assign image_path = piece.image | prepend: '/assets/img/art/' %}
        {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw{% endcapture %}
        <img src="{{ image_path }}" alt="{{ piece.title }}" class="img-fluid z-depth-1 rounded"
             sizes="{{ sizes }}" loading="eager"
             style="width: 100%; height: 100%; object-fit: cover;">
      </div>
      <div style="padding: 5px; flex-grow: 1; display: flex; flex-direction: column; justify-content: center;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2px;">
          <h3 style="margin: 0; font-size: 0.8em; font-weight: bold; color: var(--global-text-color-light); text-align: left;">{{ piece.title }}</h3>
          <p style="margin: 0; font-size: 0.5em; font-weight: bold; color: var(--global-text-color-light); text-align: right;">{{ piece.year }}</p>
          </div>
        <p style="margin: 0; font-size: 0.5em; font-weight: bold; color: var(--global-theme-color); text-align: left;">{{ piece.medium }}</p>
      </div>
    </div>
  {% endfor %}
</div>