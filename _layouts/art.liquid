---
layout: default
---

<h1 style="text-align:center; margin-bottom: 30px;">My Art</h1>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px;">
  {% for piece in site.art %}
    <div style="background:#fff; border:1px solid #e5e5e5; border-radius:12px; overflow:hidden;
                box-shadow:0 2px 6px rgba(0,0,0,0.1); transition: transform 0.2s;">
      <a href="{{ piece.link }}" target="_blank" style="text-decoration:none; color:inherit;">
        <img src="{{ piece.image }}" alt="{{ piece.title }}"
             style="width:100%; height:200px; object-fit:cover;">
        <div style="padding:15px; text-align:center;">
          <h3 style="margin:0; font-size:1.2em;">{{ piece.title }}</h3>
          <p style="margin:5px 0; font-size:0.9em; color:#666;">{{ piece.year }}</p>
          <p style="font-size:0.9em;">{{ piece.content | markdownify }}</p>
        </div>
      </a>
    </div>
  {% endfor %}
</div>