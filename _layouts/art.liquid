---
layout: default
---

<div class="post">
<header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>
</div>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px;">
  {% for piece in site.art %}
    <div style="background:#fff; border:1px solid #e5e5e5; border-radius:12px; overflow:hidden;
                box-shadow:0 2px 6px rgba(0,0,0,0.1); transition: transform 0.2s;
                display:flex; flex-direction:column; height:350px;">
      <a href="{{ piece.link }}" target="_blank" style="text-decoration:none; color:inherit; display:flex; flex-direction:column; height:100%;">
        <img src="{{ piece.image | prepend: 'assets/img/art/'}}" alt="{{ piece.title }}"
             style="width:100%; height:180px; object-fit:cover;">
        <div style="padding:10px; text-align:center; flex-grow:1; display:flex; flex-direction:column; justify-content:center;">
          <h3 style="margin:0; font-size:1.1em;">{{ piece.title }}</h3>
          <p style="margin:5px 0; font-size:0.85em; color:#666;">{{ piece.year }}</p>
          <p style="font-size:0.85em;">{{ piece.content | markdownify }}</p>
        </div>
      </a>
    </div>
  {% endfor %}
</div>